player_card.split()

suit = player_card[1]
value = player_card[0]
computer_card.split()
csuit = computer_card[1]
cvalue = computer_card[0]


visual_card = (f"┌─────────┐                        ┌─────────┐\n"
               f"│{value}        │                        │{cvalue}        │\n"
               f"│         │                        │         │\n"
               f"│   {suit}     │           vs           │  {csuit}      │\n"
               f"│         │                        │         │\n"
               f"│      {value}  │                        │     {cvalue}   │\n"
               f"└─────────┘                        └─────────┘\n")

#tiebreaker

